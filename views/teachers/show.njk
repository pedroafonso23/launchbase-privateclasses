{% extends 'layout.njk' %}

{% block content %}

<div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Details</h3>

        <div class="item">
            <div>Teacher</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{ teacher.birth }}</div>
        </div>

        <div class="item">
            <div>Academic degree</div>
            <div>{{ 'Male' if teacher.academic == 'M' else 'Female' }}</div>
        </div>

        <div class="item">
            <div>Class type</div>
            <div>{{ 'Online' if teacher.class_type == 'O' else 'Presential' }}</div>
        </div>

        <div class="item">
            <div>Specialties</div>
            <div>
                {% for service in teacher.services %}
                    <span>{{ service }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href="#" class="button">Edit</a>

    </section>
</div>

{% endblock content %}